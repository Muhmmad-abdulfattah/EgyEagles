@model EgyEagles.MVC.Models.CreateVehicleViewModel

@{
    ViewBag.Title = "Add Vehicle";
}

<h2>Add New Vehicle</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CompanyId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Vehicle Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Vehicle</button>
    <a asp-action="Index" asp-route-companyId="@Model.CompanyId" class="btn btn-secondary">Cancel</a>
</form>
